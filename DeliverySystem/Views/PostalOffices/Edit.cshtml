@using Common.DTO;
@model Common.DTO.AddPostalOfficeModel

@{
    ViewData["Title"] = "Edit";
}
@if (User.IsInRole("Admin"))
{
    <div class="container mt-4">
        <h1>Edit Postal Office</h1>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Postal Office Details</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="OfficeName" class="control-label"></label>
                                <input asp-for="OfficeName" class="form-control" />
                                <span asp-validation-for="OfficeName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Location" class="control-label"></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AreaId" class="control-label"></label>
                                <input asp-for="AreaId" class="form-control" />
                                <span asp-validation-for="AreaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-2">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
