@model DAL.Entities.Area

@{
    ViewData["Title"] = "Delete";
}
@if (User.IsInRole("Admin"))
{
    <div class="container mt-4">
        <h2>Delete Area</h2>

        <div class="alert alert-warning" role="alert">
            <p>Are you sure you want to delete this area?</p>
        </div>

        <div>
            <h4>Area Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZipCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZipCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AreaInformation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AreaInformation)
                </dd>
            </dl>

            <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
}
